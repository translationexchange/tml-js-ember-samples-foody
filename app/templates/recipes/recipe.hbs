<div class="content">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-7">
        {{#link-to "recipes"}}
          â† {{tr "Back to recipes"}}
        {{/link-to}}
        
        <div class="recipe">
          <h1 class="my-4">{{tr recipe.name}}</h1>
          {{#if recipe.preparation}}
            <h5 class="text-muted mb-3">{{tr "Preparation"}}</h5>
            <p data-tml-source="recipe-{{recipe.id}}">{{tr recipe.preparation}}</p>
            <hr class="my-5">
          {{/if}}
          <h5 class="text-muted mb-3">{{tr "Directions"}}</h5>
          <ol data-tml-source="recipe-{{recipe.id}}">
            {{#each recipe.directions as |dir|}}
              <li><p>{{tr dir}}</p></li>
            {{/each}}
          </ol>
        </div>
      </div>

      <div class="col-md-5 offset-lg-1">
        <div class="panel panel-default">
          <img class="img-responsive rounded mb-4" src={{recipe.image}} />
          <div class="panel-body">
            <h5 class="text-muted">{{tr "Ingredient List"}}</h5>
            <table class="table table-sm recipe-table">
              <tbody data-tml-source="recipe-{{recipe.id}}">
                {{#each recipe.ingredients as |ingredient|}}
                  <tr>
                    <td>
                      <strong>
                        {{tr ingredient.quantity}}
                        {{#if ingredient.measurements}}
                          {{tr ingredient.measurements}}
                        {{/if}}
                      </strong>
                      {{tr ingredient.name}}
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>