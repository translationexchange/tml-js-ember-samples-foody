<div class="navbar navbar-default">
  <div class="container">
    {{#link-to "application" class="navbar-brand"}}
      <strong>Foody</strong>
    {{/link-to}}
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <img src={{currentLanguage.flag_url}} />
          {{tr tml.currentLanguage.english_name}}
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          {{#each tml.availableLanguages as |language|}}
            <li>
              <a {{action (action tml.changeLanguage) language.locale}}>
                <img src={{language.flag_url}} />
                {{tr language.english_name}}
              </a>
            </li>
          {{/each}}
        </ul>
      </li>
    </ul>    
  </div>
</div>

{{outlet}}