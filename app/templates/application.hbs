
<div dir={{if tml.currentLanguage.right_to_left 'rtl'}}>


  {{tml-begin-block source="header"}}
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded py-3">
      <div class="container">
        {{#link-to "application" class="navbar-brand"}}
          Foody
        {{/link-to}}  
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            {{#link-to "recipes" class="nav-link"}}{{tr "Recipes"}}{{/link-to}}
          </li>
          <li class="nav-item">
            {{#link-to "about" class="nav-link"}}{{tr "About"}}{{/link-to}}
          </li>
        </ul>



        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              <img src={{tml.currentLanguage.flag_url}} />
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              {{#each tml.availableLanguages as |language|}}
                <a class="dropdown-item" href="javascript://" {{action (action tml.changeLanguage) language.locale}}>
                  <img src={{language.flag_url}} />
                  {{tr language.english_name}}
                </a>
              {{/each}}
              <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="javascript://" {{action (action tml.toggleTranslationMode)}}> 
                  {{#if tml.translationModeEnabled}}
                    {{tr "Disable Translation Mode"}}
                  {{else}}
                    {{tr "Enable Translation Mode"}}
                  {{/if}}
                </a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  {{tml-end-block}}

  {{outlet}}

</div>